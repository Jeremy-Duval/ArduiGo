<?xml version="1.0" encoding="UTF-8"?>
<Template>
	<TemplateInformationHeader name="Messages" description="/" type="table" default="false"/>
	<DiagramBaseInitiationBlock>
	
	<StaticText content="Messages" style="Heading 2 (VP)"/>
	<ParagraphBreak/>
	
	<HasChildElementChecker flag="true" modelTypes="CommunicationMessage, CommunicationReverseMessage">
		<TableBlock colWidths="10, 30, 60" tableWidth="14500" alignment="right">
			<TableRow>
				<TableCell leftBorderEnable="false" rightBorderEnable="false" color="230, 230, 230">
					<StaticText content="No." style="Column header 1"/>
				</TableCell>
				<TableCell leftBorderEnable="false" rightBorderEnable="false" color="230, 230, 230">
					<StaticText content="Name" style="Column header 1"/>
				</TableCell>
				<TableCell leftBorderEnable="false" rightBorderEnable="false" color="230, 230, 230">
					<StaticText content="Documentation" style="Column header 1"/>
				</TableCell>
			
			</TableRow>
			<!-- use IterationBlock @sortBy="property" @sortProperty="sequenceNumber" -->
			<IterationBlock modelTypes="CommunicationMessage, CommunicationReverseMessage" sortBy="property" sortProperty="sequenceNumber" descendingSort="false">
				<!-- 
				use IterationBlock @modelTypes="CommunicationMessage, CommunicationReverseMessage". don't need use ValueConditionChecker
				For Your Information:
				the <IterationBlock is based on the CommunicationDiagram. IterationBlock retrieves the DiagramElement of the diagram.
				Message's modelType is "Message", however, Message's DiagramElement's shapeType are different in Communication Diagram and Sequence Diagram
				on Sequence Diagram, shapeType is "Message"
				on Communication Diagram, shapeType is "CommunicationMessage" or "CommunicationReverseMessage"
				-->
				<TableRow>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StringPropertyText propertyText="sequenceNumber" style="Table Contents"/>
					</TableCell>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StringPropertyText propertyText="name" style="Table Contents"/>
					</TableCell>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StringPropertyText propertyText="documentation" style="Table Contents"/>
					</TableCell>
				</TableRow>
			</IterationBlock>
		</TableBlock>
	</HasChildElementChecker>
	<StaticText content="" style="Default"/>
	</DiagramBaseInitiationBlock>
</Template>