<?xml version="1.0" encoding="UTF-8"?>
<Template>
	<TemplateInformationHeader name = "Columns" description = "/" type = "table" default = "false"/>
	<ElementBaseInitiationBlock>
	
		<StaticText content = "Columns" style = "Heading 2 (VP)"/>
		<ParagraphBreak/>
		<HasChildElementChecker type = "DBColumn" flag = "true">
			<TableBlock colWidths = "3000,3000,2000,2000" tableWidth = "14500" alignment = "right">
				<TableRow>
					<TableCell leftBorderEnable = "false" rightBorderEnable = "false" color = "230, 230, 230">
						<StaticText content = "Name" style = "Column header 1"/>
					</TableCell>
					<TableCell leftBorderEnable = "false" rightBorderEnable = "false" color = "230, 230, 230">
						<StaticText content = "Type" style = "Column header 1"/>
					</TableCell>
					<TableCell leftBorderEnable = "false" rightBorderEnable = "false" color = "230, 230, 230">
						<StaticText content = "Length" style = "Column header 1"/>
					</TableCell>
					<TableCell leftBorderEnable = "false" rightBorderEnable = "false" color = "230, 230, 230">
						<StaticText content = "Primary Key" style = "Column header 1"/>
					</TableCell>
				</TableRow>
				<IterationBlock elementType = "DBColumn">
					<TableRow>
						<TableCell leftBorderEnable = "false" rightBorderEnable = "false">
							<StringPropertyText propertyText = "name" style = "Table Contents"/>
						</TableCell>
						<TableCell leftBorderEnable = "false" rightBorderEnable = "false">
							<StringPropertyText propertyText = "dbColumnType" style = "Table Contents"/>
						</TableCell>
						<TableCell leftBorderEnable = "false" rightBorderEnable = "false">
							<IntPropertyText propertyText = "length" style = "Table Contents"/>
							<ValueConditionChecker property="scale" operator="greater than" value="0">
								<StaticText content=", " style="Table Contents"/>
								<IntPropertyText property="scale" style="Table Contents"/>
							</ValueConditionChecker>
						</TableCell>
						<TableCell leftBorderEnable = "false" rightBorderEnable = "false">
							<ValueConditionChecker property = "primaryKey" propertyType = "boolean" operator = "EQUAL" value = "true">
								<StaticText content = "true" style = "Table Contents"/>
							</ValueConditionChecker>
							<ValueConditionChecker property = "primaryKey" propertyType = "boolean" operator = "EQUAL" value = "false">
								<StaticText content = "false" style = "Table Contents"/>
							</ValueConditionChecker>
						</TableCell>
					</TableRow>
				</IterationBlock>
			</TableBlock>
		</HasChildElementChecker>
		<StaticText content = "" style = "Default"/>
	</ElementBaseInitiationBlock>
</Template>