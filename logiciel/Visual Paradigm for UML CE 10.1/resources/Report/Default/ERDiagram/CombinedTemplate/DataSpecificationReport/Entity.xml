<Template>
	<TemplateInformationHeader name = "Entity" description = "/" type = "text" default = "false"/>
	<ElementBaseInitiationBlock>
		
		<ElementImage imageType="icon"/>
		<StringPropertyText propertyText="name" style = "Heading 1"/>
		<ParagraphBreak/>
		
		<ValueConditionChecker property="documentation" operator="not equals" value="">
			<StringPropertyText propertyText="documentation"/>
			<ParagraphBreak/>
		</ValueConditionChecker>
	
		<HasChildElementChecker flag="true">
			<IterationBlock>
				<StringPropertyText propertyText="name" style = "Heading 3"/>
				<StaticText content=":" style = "Heading 3"/>
				<StringPropertyText propertyText="type" style = "Heading 3"/>
				<ValueConditionChecker property="length" operator="greater than" value="0">
					<StaticText content="(" style = "Heading 3"/>
					<StringPropertyText propertyText="length" style = "Heading 3"/>
					<ValueConditionChecker property="scale" operator="greater than" value="0">
						<StaticText content=", " style="Heading 3"/>
						<StringPropertyText property="scale" style="Heading 3"/>
					</ValueConditionChecker>
					<StaticText content=")" style = "Heading 3"/>
				</ValueConditionChecker>
				<ParagraphBreak/>
				
				<ValueConditionChecker property="documentation" operator="not equals" value="">
					<StringPropertyText propertyText="documentation"/>
					<ParagraphBreak/>
				</ValueConditionChecker>
			</IterationBlock>
		</HasChildElementChecker>
		
		<HasChildElementChecker flag="true" valueConditionCheckerId="isPrimaryKeyChecker">
			<StaticText content="Primary Keys: " style = "Heading 3"/>
			<IterationBlock ignoreParagraphBreakForLastModel="true">
				<ValueConditionChecker property="primaryKey" operator="equals" value="true" id="isPrimaryKeyChecker">
					<StringPropertyText propertyText="name" />
					<StaticText content="," />
				</ValueConditionChecker>
			</IterationBlock>
			<ParagraphBreak/>
		</HasChildElementChecker>
		
		<HasChildElementChecker flag="true" valueConditionCheckerId="isForeignKeyChecker">
			<StaticText content="Foreign Keys: " style = "Heading 3"/>
			<IterationBlock ignoreParagraphBreakForLastModel="true">
				<ValueConditionChecker property="foreignKey" operator="equals" value="true" id="isForeignKeyChecker">
					<StringPropertyText propertyText="name" />
					<StaticText content="," />
				</ValueConditionChecker>
			</IterationBlock>
			<ParagraphBreak/>
		</HasChildElementChecker>
		
		<HasRelationshipChecker flag="true" modelType="DBForeignKey" direction="from">
			<StaticText content="Detail Entities: " style = "Heading 3"/>
			<ForEachSimpleRelationship type = "DBForeignKey" ignoreParagraphBreakForLastModel = "true" direction="from" >
				<ValueConditionChecker property="toMultiplicity" operator="equals" value="0..*">
					<ToEnd>
						<ValueConditionChecker property="modelType" operator="equals" value="DBTable">
							<StringPropertyText propertyText="name"/>
							<StaticText content = "," />
						</ValueConditionChecker>
					</ToEnd>
				</ValueConditionChecker>
				<ValueConditionChecker property="toMultiplicity" operator="equals" value="1..*">
					<ToEnd>
						<ValueConditionChecker property="modelType" operator="equals" value="DBTable">
							<StringPropertyText propertyText="name"/>
							<StaticText content = "," />
						</ValueConditionChecker>
					</ToEnd>
				</ValueConditionChecker>
			</ForEachSimpleRelationship>
			<ParagraphBreak/>
		</HasRelationshipChecker>
		
		<HasRelationshipChecker flag="true" modelType="DBForeignKey" direction="to">
			<StaticText content="Master Entities: " style = "Heading 3"/>
			<ForEachSimpleRelationship type = "DBForeignKey" ignoreParagraphBreakForLastModel = "true" direction="to">
				<ValueConditionChecker property="toMultiplicity" operator="equals" value="0..*">
					<FromEnd>
						<ValueConditionChecker property="modelType" operator="equals" value="DBTable">
							<StringPropertyText propertyText="name"/>
							<StaticText content = "," />
						</ValueConditionChecker>
					</FromEnd>
				</ValueConditionChecker>
				<ValueConditionChecker property="toMultiplicity" operator="equals" value="1..*">
					<FromEnd>
						<ValueConditionChecker property="modelType" operator="equals" value="DBTable">
							<StringPropertyText propertyText="name"/>
							<StaticText content = "," />
						</ValueConditionChecker>
					</FromEnd>
				</ValueConditionChecker>
			</ForEachSimpleRelationship>
			<ParagraphBreak/>
		</HasRelationshipChecker>
	</ElementBaseInitiationBlock>	
</Template>