<?xml version="1.0" encoding="UTF-8"?>
<Template>
	<TemplateInformationHeader name="Glossary Grid" description="/" icon="grid diagram" type="table" default="true"/>
	<ProjectBaseInitiationBlock>
	
		<StaticText content="Glossary Grid" style="Heading 1 (VP)"/>
		<ParagraphBreak/>
		
		<TableBlock colWidths="20, 20, 20, 40" tableWidth="15500" alignment="right" rowBackgroundColors="#F0F0FF, #FFFFFF">
			<TableRow backgroundColor="#E6E6E6">
				<TableCell leftBorderEnable="false" rightBorderEnable="false">
					<StaticText content="Name" style="Row caption 1"/>
				</TableCell>
				<TableCell leftBorderEnable="false" rightBorderEnable="false">
					<StaticText content="Aliases" style="Row caption 1"/>
				</TableCell>
				<TableCell leftBorderEnable="false" rightBorderEnable="false">
					<StaticText content="Label" style="Row caption 1"/>
				</TableCell>
				<TableCell leftBorderEnable="false" rightBorderEnable="false">
					<StaticText content="Documentation" style="Row caption 1"/>
				</TableCell>
			</TableRow>
			
			<IterationBlock elementType="Glossary" allLevel="true" sortBy="property" sortProperty="name">
				<TableRow>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StringPropertyText property="name" style="Table Contents"/>
					</TableCell>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<ForEach property="aliases" ignoreParagraphBreakForLastModel="true">
							<StringPropertyText property="name" style="Table Contents"/>
							<StaticText content=", " style="Table Contents"/>
						</ForEach>
					</TableCell>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<ForEach property="labels" ignoreParagraphBreakForLastModel="true">
							<StringPropertyText property="name" style="Table Contents"/>
							<StaticText content=", " style="Table Contents"/>
						</ForEach>
					</TableCell>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StringPropertyText property="documentation" style="Table Contents"/>
					</TableCell>
				</TableRow>
			</IterationBlock>
		</TableBlock>
		<ParagraphBreak/>
		
		<StaticText content="" style="Default"/>
	</ProjectBaseInitiationBlock>
</Template>