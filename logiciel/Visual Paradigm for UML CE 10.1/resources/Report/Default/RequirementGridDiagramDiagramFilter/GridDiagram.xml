<?xml version="1.0" encoding="UTF-8"?>
<Template>
	<TemplateInformationHeader name="Requirements Grid (with diagram filter)" description="/" icon="grid diagram" type="table" default="true"/>
	<DiagramBaseInitiationBlock>
	
		<StaticText content="Requirements Grid" style="Heading 1 (VP)"/>
		<StaticText content=" (in " style="Heading 1 (VP)"/>
		<StringPropertyText property="name" style="Heading 1 (VP)"/>
		<StaticText content=" )" style="Heading 1 (VP)"/>
		<ParagraphBreak/>
		
		<TableBlock colWidths="10, 60, 30" tableWidth="15500" alignment="right" rowBackgroundColors="#F0F0FF, #FFFFFF">
			<TableRow backgroundColor="#E6E6E6">
				<TableCell leftBorderEnable="false" rightBorderEnable="false">
					<StaticText content="ID" style="Row caption 1"/>
				</TableCell>
				<TableCell leftBorderEnable="false" rightBorderEnable="false">
					<StaticText content="Name" style="Row caption 1"/>
				</TableCell>
				<TableCell leftBorderEnable="false" rightBorderEnable="false">
					<StaticText content="Stereotypes" style="Row caption 1"/>
				</TableCell>
			</TableRow>
			
			<IterationBlock elementType="Requirement" allLevel="true" sortBy="property" sortProperty="requirementID">
				<ElementBaseInitiationBlock>
					<TableRow>
						<TableCell leftBorderEnable="false" rightBorderEnable="false">
							<StringPropertyText property="requirementID" style="Table Contents"/>
						</TableCell>
						<TableCell leftBorderEnable="false" rightBorderEnable="false">
							<StringPropertyText property="name" style="Table Contents"/>
						</TableCell>
						<TableCell leftBorderEnable="false" rightBorderEnable="false">
							<ForEach property="stereotypes" ignoreParagraphBreakForLastModel="true">
								<ValueConditionChecker property="name" operator="not equals" value="requirement">
									<StaticText content="&lt;&lt;" style="Table Contents"/>
									<StringPropertyText property="name" style="Table Contents"/>
									<StaticText content=">>" style="Table Contents"/>
									<StaticText content=", " style="Table Contents"/>
								</ValueConditionChecker>
							</ForEach>
						</TableCell>
					</TableRow>
				</ElementBaseInitiationBlock>
			</IterationBlock>
		</TableBlock>
		<ParagraphBreak/>
		
		<StaticText content="" style="Default"/>
	</DiagramBaseInitiationBlock>
</Template>