<?xml version="1.0" encoding="UTF-8"?>
<Template>
	<TemplateInformationHeader name="Basic Information" description="/" type="table" default="true"/>
	<ElementBaseInitiationBlock>
	
		<StringPropertyText propertyText="modelType" style="Heading 1 (VP)"/>
		<StaticText content=" : " style="Heading 1 (VP)"/>
		<StringPropertyText propertyText="name" style="Heading 1 (VP)"/>
		<ParagraphBreak/>
		
		<TableBlock colWidths = "20, 80" tableWidth="15500" alignment="right">
			
			<!-- id -->
			<ValueConditionChecker property="elementId" operator="NOT EQUAL" value="">
				<TableRow>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StaticText content="ID :" style="Row caption 1"/>
					</TableCell>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StringPropertyText propertyText="elementId" style="Table Contents"/>
					</TableCell>
				</TableRow>
			</ValueConditionChecker>
			
			<!-- options -->
			<HasMetaModelPropertyChecker property="options" flag="true">
				<TableRow>
					<TableCell leftBorderEnable="false" rightBorderEnable="false">
						<StaticText content="Options :" style="Row caption 1"/>
					</TableCell>
					<TableCell leftBorderEnable="false" rightBorderEnable="false" splitted="true">
						<TableRow>
							<TableCell>
								<StaticText content="Selected" style="Row caption 1"/>
							</TableCell>
							<TableCell>
								<StaticText content="Name" style="Row caption 1"/>
							</TableCell>
							<TableCell>
								<StaticText content="Value" style="Row caption 1"/>
							</TableCell>
						</TableRow>
						<ForEach property="options">
							<TableRow>
								<TableCell>
									<DefaultConditionChecker property="selected" equalFlag="false">
										<StringPropertyText propertyText="selected" style="Table Contents"/>
									</DefaultConditionChecker>
								</TableCell>
								<TableCell>
									<StringPropertyText propertyText="name" style="Table Contents"/>
								</TableCell>
								<TableCell>
									<StringPropertyText propertyText="value" style="Table Contents"/>
								</TableCell>
							</TableRow>
						</ForEach>
					</TableCell>
				</TableRow>
			</HasMetaModelPropertyChecker>
			
			<!-- documentation -->
			<ValueConditionChecker property="documentation" operator="NOT EQUAL" value="">
				<ReportOptionChecker option="basicInformationShowsDocumentation" equalFlag="true">
					<TableRow>
						<TableCell leftBorderEnable="false" rightBorderEnable="false">
							<StaticText content="Doc :" style="Row caption 1"/>
						</TableCell>
						<TableCell leftBorderEnable="false" rightBorderEnable="false">
							<StringPropertyText propertyText="documentation" style="Table Contents"/>
						</TableCell>
					</TableRow>
				</ReportOptionChecker>
			</ValueConditionChecker>
			
		</TableBlock>
		<StaticText content="" style="Default"/>
	</ElementBaseInitiationBlock>
</Template>