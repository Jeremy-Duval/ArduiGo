<Template>
	<TemplateInformationHeader name = "Actor" description = "/" type = "text" default = "false"/>
	<ElementBaseInitiationBlock>
		
		<ElementImage imageType="icon"/>
		<StringPropertyText propertyText="name" style = "Heading 1"/>
		<ParagraphBreak/>
		
		<ValueConditionChecker property="documentation" operator="not equals" value="">
			<StringPropertyText propertyText="documentation"/>
			<ParagraphBreak/>
		</ValueConditionChecker>
	
		<HasRelationshipChecker flag="true" modelType="Association">
			<StaticText content = "Use Cases: " style = "Heading 3"/>
			<ForEachRelationshipEnd type = "AssociationEnd" endPointer = "self" ignoreParagraphBreakForLastModel = "true">
				<RelationshipEndEndRelationship>
					<FromEnd>
						<MetaModelElement property="EndModelElement">
							<ValueConditionChecker property="modelType" operator="equals" value="UseCase">
								<StringPropertyText propertyText="name"/>
								<StaticText content = "," />
							</ValueConditionChecker>
						</MetaModelElement>
					</FromEnd>
					<ToEnd>
						<MetaModelElement property="EndModelElement">
							<ValueConditionChecker property="modelType" operator="equals" value="UseCase">
								<StringPropertyText propertyText="name"/>
								<StaticText content = "," />
							</ValueConditionChecker>
						</MetaModelElement>
					</ToEnd>
				</RelationshipEndEndRelationship>
			</ForEachRelationshipEnd>
			<ParagraphBreak/>
		</HasRelationshipChecker>
		
		<HasRelationshipChecker flag="true" modelType="Generalization" direction="to">
			<StaticText content = "Super Actors: " style = "Heading 3"/>
			<ForEachSimpleRelationship type = "Generalization" ignoreParagraphBreakForLastModel = "true">
				<MetaModelElement property="from">
					<ValueConditionChecker property="modelType" operator="equals" value="Actor">
						<StringPropertyText propertyText="name"/>
						<StaticText content = "," />
					</ValueConditionChecker>
				</MetaModelElement>
			</ForEachSimpleRelationship>
			<ParagraphBreak/>
		</HasRelationshipChecker>
		
		<HasRelationshipChecker flag="true" modelType="Generalization" direction="from">
			<StaticText content = "Sub Actors: " style = "Heading 3"/>
			<ForEachSimpleRelationship type = "Generalization" ignoreParagraphBreakForLastModel = "true">
				<MetaModelElement property="to">
					<ValueConditionChecker property="modelType" operator="equals" value="Actor">
						<StringPropertyText propertyText="name"/>
						<StaticText content = "," />
					</ValueConditionChecker>
				</MetaModelElement>
			</ForEachSimpleRelationship>
			<ParagraphBreak/>
		</HasRelationshipChecker>
		
	</ElementBaseInitiationBlock>	
</Template>